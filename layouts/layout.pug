doctype html
html(lang='en')
html
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      block title
        title= title ? title + " by " + site.title : site.title

      link(rel='shortcut icon', type='image/x-icon', href='/favicon.ico')
      block styles
        link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Catamaran:400,700')
        link(rel='stylesheet', href='/css/main.css')
  body
    header
      div.content-wrap
        div.logo
          h1 
            a(href="/") Spencer Apple's
        ul.nav-bar 
          h1
            a(href="/") Projects

    block body
      div.content
        div.content-wrap
          block main

    footer
      div.content-wrap
        block footer
          section.about!= partials[0].contents.toString()
          section.copy
            p &copy; #{ new Date().getFullYear() } Spencer Apple &mdash; 
              a(href=site.repo) Site
              |  powered by&nbsp;
              a(href='http://www.metalsmith.io/') Metalsmith
